<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="album"
            type="com.softbankrobotics.mvvm.data.models.Album" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="195dp">

                    <ImageView
                        app:image="@{album.url}"
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="195dp" />

                    <RelativeLayout
                        android:id="@+id/layout_like"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:layout_margin="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/relativelayout_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginRight="6dp"
                            android:layout_marginTop="3dp"
                            android:id="@+id/imageViewLike"
                            android:background="@drawable/ic_like"
                            android:layout_width="15dp"
                            android:layout_height="14dp"/>

                        <TextView
                            android:layout_toRightOf="@id/imageViewLike"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:id="@+id/textViewLikePercent"
                            android:text="@{album.id}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="@{album.albumId}"
                            android:textSize="10sp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/textViewLikePercent"
                            android:textColor="@android:color/white"
                            android:id="@+id/textViewVotesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textViewTitle"
                        android:textSize="18sp"
                        android:textColor="#1A1A1A"
                        android:text="@{album.title}"
                        tools:text="Lorem ipsum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <TextView
                    android:background="#414141"
                    android:layout_marginBottom="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>